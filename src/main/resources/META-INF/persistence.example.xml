<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence
                                 https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">

    <persistence-unit name="dev" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <class>org.hospitalManagementSystem.entity.Patient</class>
        <class>org.hospitalManagementSystem.entity.Department</class>
        <class>org.hospitalManagementSystem.entity.Doctor</class>
        <class>org.hospitalManagementSystem.entity.MedicalRecord</class>
        <class>org.hospitalManagementSystem.entity.Appointment</class>
        <class>org.hospitalManagementSystem.entity.Prescription</class>

        <properties>
            <property name="jakarta.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
            <property name="jakarta.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/Hibernate_Assignment?createDatabaseIfNotExist=true"/>
            <property name="jakarta.persistence.jdbc.user" value="name"/>
            <property name="jakarta.persistence.jdbc.password" value="pass"/>

            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>
            <property name="hibernate.hbm2ddl.auto" value="create"/>
        </properties>
    </persistence-unit>

</persistence>
